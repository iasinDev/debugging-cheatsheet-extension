{
    "manifest_version": 2,
    "name": "Web Debugger CheatSheet",
    "description": "A browser extension for Chrome for web debugging cheatsheet",
    "version": "0.0.1",
    "author": "Sema Garc√≠a",
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/wdc_16.png",
            "24": "icons/wdc_24.png",
            "32": "icons/wdc_32.png"
        },
        "default_title": "Open cheatsheet!",
        "default_popup": "browser-action/browser-action-popup.html"
    },
    "permissions": [
        "activeTab",
        "declarativeContent"
    ]
}